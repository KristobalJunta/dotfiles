# ~/.gitconfig
# by @KristobalJunta

[push]
	default = simple

[alias]
	co = checkout
	br = branch
	ci = commit
	st = status
	t = tag
	unstage = reset HEAD --
	all = add .
	l = log --oneline

[core]
	autocrlf = input
	pager = delta

[interactive]
	diffFilter = delta --color-only

[pull]
	rebase = false

[delta]
	plus-style = "syntax #005f00"
	minus-style = "syntax #5f0000"
	syntax-theme = Monokai Extended

[include]
	path = ~/.gitconfig.user
