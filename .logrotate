# sample logrotate configuration file
compress

/var/log/messages {
  rotate 5
  weekly
  postrotate
  /usr/bin/killall -HUP syslogd
  endscript
}

"/var/log/apache2/*.log" /var/log/apache2/*.log {
  rotate 5
#  mail www@my.org
  size 100k
  sharedscripts
  postrotate
  /usr/bin/killall -HUP apache2
  endscript
}

/var/log/news/* {
  monthly
  rotate 2
  olddir /var/log/news/old
  missingok
  postrotate
  kill -HUP `cat /var/run/inn.pid`
  endscript
  nocompress
}

~/log/*.log {}
