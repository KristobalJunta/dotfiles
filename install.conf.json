[
  {
    "defaults": {
      "link": {
        "relink": true,
        "create": true,
        "glob": true
      }
    }
  },
  {
    "clean": ["~"]
  },
  {
    "shell": [
      ["git submodule update --init --recursive", "Installing submodules"],
      ["python3 linux/create_dirs.py", "Creating user directories"],
      ["bash starship/install_starship.sh", "Installing starship.rs command prompt"],
      ["cp bash/bash_env ~/.bash_env", "Copy bash env file without overwriting"]
    ]
  },
  {
    "link": {
      "~/.bashrc": "bash/bashrc",
      "~/.profile": "bash/profile",
      "~/.bash_completion": "bash/bash_completion",
      "~/.bash_completion.d": "bash/bash_completion.d",
      "~/.bash_aliases": "bash/bash_aliases",

      "~/.editorconfig": "editorconfig/editorconfig",
      "~/.gitconfig": "git/gitconfig",
      "~/.vimrc": "vim/vimrc",

      "~/.config/user-dirs.dirs": "linux/user-dirs.dirs",

      "~/.config/starship.toml": "starship/starship.toml",

      "~/.local/share/kxmlgui5/dolphin/dolphinui.rc": "kde/dolphinui.rc",
      "~/.config/kglobalshortcutsrc": "kde/kglobalshortcutsrc",
      "~/.local/share/kxmlgui5/konsole/konsoleui.rc": "kde/konsole/konsoleui.rc",
      "~/.local/share/kxmlgui5/konsole/sessionui.rc": "kde/konsole/sessionui.rc"
    }
  }
]
