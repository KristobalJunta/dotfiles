[
  {
    "defaults": {
      "link": {
        "relink": true,
        "create": true,
        "glob": true
      }
    }
  },
  {
    "clean": ["~"]
  },
  {
    "shell": [
      ["git submodule update --init --recursive", "Installing submodules"],

      ["mkdir -p ~/bin"],
      ["mkdir -p ~/desktop"],
      ["mkdir -p ~/documents"],
      ["mkdir -p ~/downloads"],
      ["mkdir -p ~/music"],
      ["mkdir -p ~/pictures"],
      ["mkdir -p ~/public"],
      ["mkdir -p ~/templates"],
      ["mkdir -p ~/videos"],
      ["mkdir -p ~/work"],
      ["mkdir -p ~/.bash_completion.d"]
    ]
  },
  {
    "link": {
      "~/.bashrc": "bash/bashrc",
      "~/.bash_completion": "bash/bash_completion",
      "~/.editorconfig": "editorconfig/editorconfig",
      "~/.gitconfig": "git/gitconfig",
      "~/.vimrc": "vim/vimrc",
      "~/.config/user-dirs.dirs": "linux/user-dirs.dirs"
    }
  }
]
