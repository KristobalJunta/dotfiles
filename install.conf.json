[
  {
    "defaults": {
      "link": {
        "relink": true,
        "create": true,
        "glob": true
      }
    }
  },
  {
    "clean": ["~"]
  },
  {
    "link": {
      "~/.bashrc": "bash/bashrc",
      "~/.editorconfig": "editorconfig/editorconfig",
      "~/.gitconfig": "git/gitconfig",
      "~/.vimrc": "vim/vimrc",
      "~/.config/VSCodium/User/settings.json": "vscode/settings.json",
      "~/.config/VSCodium/User/snippets/": "vscode/snippets/*",
      "~/.config/user-dirs.dirs": "linux/user-dirs.dirs"
    }
  },
  {
    "shell": [
      ["git submodule update --init --recursive", "Installing submodules"]
    ]
  }
]
