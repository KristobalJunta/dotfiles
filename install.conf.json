[
  {
    "defaults": {
      "link": {
        "relink": true,
        "create": true,
        "glob": true
      }
    }
  },
  {
    "clean": ["~"]
  },
  {
    "shell": [
      ["git submodule update --init --recursive", "Installing submodules"],
      ["python3 linux/create_dirs.py", "Creating user directories"]
    ]
  },
  {
    "link": {
      "~/.bashrc": "bash/bashrc",
      "~/.bash_completion": "bash/bash_completion",
      "~/.bash_completion.d": "bash/bash_completion.d",
      "~/.editorconfig": "editorconfig/editorconfig",
      "~/.gitconfig": "git/gitconfig",
      "~/.vimrc": "vim/vimrc",
      "~/.config/user-dirs.dirs": "linux/user-dirs.dirs",
      "~/.local/share/kxmlgui5/dolphin/dolphinui.rc": "kde/dolphinui.rc",
      "~/.config/kglobalshortcutsrc": "kde/kglobalshortcutsrc"
    }
  }
]
