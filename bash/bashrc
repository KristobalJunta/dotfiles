# aliases
alias mc="mc -b"

export VISUAL=$(which vim)
export EDITOR=$(which vim)
export LESS="-SRXF"
export POETRY_VIRTUALENVS_IN_PROJECT=1

if [ -n "$(command -v starship)" ]; then
  eval "$(starship init bash)"
fi
