[push]
	default = simple

[pull]
	rebase = true

[alias]
	br = branch
	ci = commit
	co = checkout
	rb = rebase
	st = status
	sw = switch
	# a recursive alias to handle accidental `git git status`
	git = !git

[include]
	path = ~/.gitconfig.user
	path = ~/.gitconfig.delta

[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process

[core]
	autocrlf = input

