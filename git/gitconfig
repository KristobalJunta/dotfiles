# ~/.gitconfig
# by @KristobalJunta

[push]
  default = simple
[alias]
  co = checkout
  br = branch
  ci = commit
  st = status
  t = tag
  unstage = reset HEAD --
  all = add .
  l = log --oneline
[include]
    path = ~/.gitconfig.user
[core]
  autocrlf = input
  pager = delta --plus-color="#012800" --minus-color="#340001" --theme='Monokai Extended'
[interactive]
  diffFilter = delta --color-only
